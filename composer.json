{
    "name": "wmde/fundraising-html-filter",
    "description": "WMDE fundraising application content HTML filter",
    "license": "GPL-2.0+",
    "require": {
        "php": ">=7.1",
        "ezyang/htmlpurifier": "^4.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1",
        "squizlabs/php_codesniffer": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "WMDE\\Fundraising\\HtmlFilter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WMDE\\Fundraising\\HtmlFilter\\Test\\": "test/"
        }
    },
    "scripts": {
        "test": [
            "composer validate --no-interaction",
            "vendor/bin/phpunit"
        ],
        "cs": [
            "@phpcs"
        ],
        "ci": [
            "@test",
            "@cs"
        ],
        "phpcs": [
            "vendor/bin/phpcs src/ test/ --standard=phpcs.xml --extensions=php -sp"
        ]
    }
}
